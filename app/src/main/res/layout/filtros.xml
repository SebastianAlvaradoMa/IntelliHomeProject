<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    android:padding="3dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:background="@color/dark_blue">

            <TextView
                android:id="@+id/precio"
                android:layout_width="113dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:text="Precio por noche:"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/seekBarProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="18dp"
                android:layout_toRightOf="@+id/precio"
                android:text="Valor colones: 0"
                android:textColor="@color/light_gray"
                android:textSize="12sp" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="157dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="147dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="88dp"
                android:layout_toRightOf="@+id/precio"
                android:max="50000"
                android:min="10000"
                android:outlineAmbientShadowColor="@color/white"
                android:progress="0" />

            <TextView
                android:id="@+id/personas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/precio"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="8dp"
                android:background="@color/dark_blue"
                android:singleLine="true"
                android:text="Cantidad de personas:"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <NumberPicker
                android:id="@+id/numberPicker"
                android:layout_width="23dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="35dp"
                android:layout_toRightOf="@+id/personas"
                android:background="#FFFFFF" />

            <TextView
                android:id="@+id/mascotas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="68dp"
                android:background="@color/dark_blue"
                android:singleLine="true"
                android:text="Permite mascotas"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="65dp"
                android:layout_toRightOf="@+id/mascotas"
                android:text=" "
                android:textColor="@color/white"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/actividad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="95dp"
                android:background="@color/dark_blue"
                android:singleLine="true"
                android:text="Amenidades"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupActividades"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="90dp"
                android:layout_toRightOf="@+id/actividad"
                app:singleSelection="false"
                android:visibility="visible">
            </com.google.android.material.chip.ChipGroup>

        </RelativeLayout>

    </ScrollView>

</androidx.cardview.widget.CardView>
