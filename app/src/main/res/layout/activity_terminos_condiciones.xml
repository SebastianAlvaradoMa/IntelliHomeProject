<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#123a75"
    tools:context=".ui.auth.registro.TerminosCondiciones">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/DarkBlue"
        android:gravity="center"
        android:text="Terminos y Condiciones"
        android:textColor="@color/white"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.088" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="371dp"
        android:layout_height="416dp"
        android:layout_marginTop="21dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.451"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.478">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView">


            <TextView
                android:id="@+id/terminos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/paragraph"
                android:textColor="@color/black"
                android:textSize="16dp" />


        </ScrollView>
    </LinearLayout>

    <CheckBox
        android:id="@+id/check1"
        android:layout_width="346dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:text="He leido, entiendo y acepto los terminos y condiciones, asi como la politica de la empresa."
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:ignore="MissingConstraints"
        />

    <Button
        android:id="@+id/RegresarCambio"
        android:layout_width="127dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginStart="32dp"
        android:backgroundTint="@color/DarkBlue"
        android:text="Regresar"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.689"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/Continuar"
        android:layout_width="127dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/DarkBlue"
        android:text="Continuar"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.689"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>