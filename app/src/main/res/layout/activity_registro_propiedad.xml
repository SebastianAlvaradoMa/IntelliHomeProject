<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.menu.RegistroPropiedad"
    android:background="@color/Fondo">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#123a75"
        android:padding="16dp">

        <Button
            android:id="@+id/registerButton"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrar Propiedad"
            android:textSize="16sp"
            android:backgroundTint="@color/dark_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mapa"/>

        <ImageButton
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/devolver"
            android:scaleType="fitCenter"
            android:background="?android:attr/selectableItemBackground"
            android:layout_margin="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="fitCenter"
            android:src="@drawable/logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            />

        <ImageButton
            android:layout_marginTop="16sp"
            android:id="@+id/camara"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:src="@drawable/camara"
            android:scaleType="fitCenter"
            android:background="?android:attr/selectableItemBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            />

        <TextView
            android:layout_marginTop="35dp"
            android:id="@+id/precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio por noche: ₡"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/mascotas"
            app:layout_constraintTop_toBottomOf="@id/mascotas"
            />

        <EditText
            android:id="@+id/price"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:inputType="number"
            android:background="@drawable/radius_corner"
            android:layout_marginTop="15dp"
            android:padding="12sp"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/precio"
            app:layout_constraintStart_toEndOf="@id/precio"
            app:layout_constraintTop_toTopOf="@id/precio"
            />

        <EditText
            android:id="@+id/name"
            android:background="@drawable/radius_corner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:padding="12sp"
            android:hint="Nombre de la propiedad"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="@id/maxPeople"
            app:layout_constraintStart_toStartOf="@id/personasmax"
            app:layout_constraintTop_toBottomOf="@+id/camara"
            />

        <TextView
            android:id="@+id/mascotas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acepta mascotas:"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/back"
            app:layout_constraintTop_toBottomOf="@id/name"
            />

        <Button
            android:id="@+id/si"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sí"
            android:textColor="@color/white"
            android:backgroundTint="@color/dark_blue"
            android:padding="9dp"
            app:layout_constraintStart_toEndOf="@id/mascotas"
            app:layout_constraintTop_toTopOf="@id/mascotas"
            app:layout_constraintBottom_toBottomOf="@id/mascotas"
            android:layout_marginStart="20dp"
            />

        <Button
            android:id="@+id/no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            android:textColor="@color/white"
            android:backgroundTint="@color/dark_blue"
            android:padding="9dp"
            app:layout_constraintStart_toEndOf="@id/si"
            app:layout_constraintTop_toTopOf="@id/si"
            app:layout_constraintBottom_toBottomOf="@id/si"
            android:layout_marginStart="5dp"
            />

        <TextView
            android:layout_marginTop="40dp"
            android:id="@+id/contacto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contacto: +506"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/precio"
            app:layout_constraintTop_toBottomOf="@id/precio"
            />

        <EditText
            android:id="@+id/contact"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:padding="12sp"
            android:inputType="number"
            android:maxLength="8"
            android:layout_marginTop="15dp"
            android:background="@drawable/radius_corner"
            app:layout_constraintStart_toEndOf="@id/contacto"
            app:layout_constraintTop_toTopOf="@id/contacto"
            app:layout_constraintBottom_toBottomOf="@id/contacto"
            android:layout_marginStart="20dp"
            />

        <TextView
            android:layout_marginTop="40dp"
            android:id="@+id/personasmax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cantidad de personas max:"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/contacto"
            app:layout_constraintTop_toBottomOf="@id/contacto"
            />

        <EditText
            android:id="@+id/maxPeople"
            android:layout_width="114dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/radius_corner"
            android:inputType="number"
            android:maxLength="8"
            android:padding="12sp"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/personasmax"
            app:layout_constraintStart_toEndOf="@id/personasmax"
            app:layout_constraintTop_toTopOf="@id/personasmax"
            />

