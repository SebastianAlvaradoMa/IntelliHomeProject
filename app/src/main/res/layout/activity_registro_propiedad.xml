        <TextView
            android:id="@+id/txtubicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="276dp"
            android:text="Ubicación:"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/latitude"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/latitude"
            app:layout_constraintTop_toTopOf="@+id/amenidadesSeleccionadas" />

        <EditText
            android:id="@+id/latitude"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:padding="12sp"
            android:hint="Latitud"
            android:layout_marginTop="15dp"
            android:background="@drawable/radius_corner"
            app:layout_constraintEnd_toEndOf="@id/maxPeople"
            app:layout_constraintStart_toStartOf="@id/personasmax"
            app:layout_constraintTop_toBottomOf="@+id/txtubicacion"
            />
        <EditText
            android:id="@+id/longitude"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:padding="12sp"
            android:hint="Longitud"
            android:layout_marginTop="15dp"
            android:background="@drawable/radius_corner"
            app:layout_constraintEnd_toEndOf="@id/maxPeople"
            app:layout_constraintStart_toStartOf="@id/personasmax"
            app:layout_constraintTop_toBottomOf="@+id/latitude"
            />

        <!-- Fragmento de Google Maps -->
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/mapa"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="@id/maxPeople"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/personasmax"
            app:layout_constraintTop_toBottomOf="@id/searchText"
            map:cameraZoom="10"
            map:uiRotateGestures="true"
            map:uiZoomControls="true" />

        <AutoCompleteTextView
            android:id="@+id/searchText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/radius_corner"
            android:hint="Buscar ubicación..."
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.625"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/longitude" />

        <Button
            android:id="@+id/btnBuscar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:backgroundTint="@color/dark_blue"
            android:text="Buscar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/searchText" />




        <TextView
            android:layout_marginTop="40dp"
            android:id="@+id/textamenidades"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amenidades:"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/personasmax" />

        <Button
            android:id="@+id/btnSeleccionarAmenidades"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="84dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/dark_blue"
            android:text="Seleccionar Amenidades"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textamenidades" />

        <TextView
            android:id="@+id/amenidadesSeleccionadas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionadas: Ninguna"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnSeleccionarAmenidades"
            android:layout_marginTop="10dp" />



    </androidx.constraintlayout.widget.ConstraintLayout>
