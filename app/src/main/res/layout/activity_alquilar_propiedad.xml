<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".AlquilarPropiedad"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/dark_blue"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#123a75"
        android:padding="16dp">
        <ImageButton
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/devolver"
            android:scaleType="fitCenter"
            android:background="?android:attr/selectableItemBackground"
            android:layout_margin="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="fitCenter"
            android:src="@drawable/logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_margin="15dp"
            android:id="@+id/nombrecasa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de la Casa"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/linearLayout1"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            android:paddingBottom="15dp"
            />

        <ImageView
            android:id="@+id/camara"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:src="@drawable/camara"
            android:scaleType="fitCenter"
            android:background="?android:attr/selectableItemBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nombrecasa" />

        <ImageButton
            android:id="@+id/toright"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/flechaderecha"
            android:scaleType="fitCenter"
            android:background="?android:attr/selectableItemBackground"
            app:layout_constraintStart_toEndOf="@id/camara"
            app:layout_constraintTop_toTopOf="@id/camara"
            app:layout_constraintBottom_toBottomOf="@id/camara"
            android:layout_marginStart="15dp"
            />

        <ImageButton
            android:id="@+id/toleft"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/flechaizquierda"
            android:scaleType="fitCenter"
            android:background="?android:attr/selectableItemBackground"
            app:layout_constraintEnd_toStartOf="@id/camara"
            app:layout_constraintTop_toTopOf="@id/camara"
            app:layout_constraintBottom_toBottomOf="@id/camara"
            android:layout_marginEnd="15dp"

            />


        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="300dp"
            android:layout_height="170dp"
            android:layout_marginTop="21dp"
            android:background="@color/dark_blue"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@id/camara"
            app:layout_constraintStart_toStartOf="@id/camara"
            app:layout_constraintTop_toBottomOf="@+id/camara">


            <androidx.core.widget.NestedScrollView
                android:id="@+id/scrollView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/terminos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Ejemplo"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </androidx.core.widget.NestedScrollView>
        </LinearLayout>

        <TextView
            android:layout_marginTop="16dp"
            android:id="@+id/amenidades"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amenidades:"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/linearLayout1"
            app:layout_constraintTop_toBottomOf="@id/linearLayout1"/>

        <TextView
            android:id="@+id/textoamenidades"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:padding="12sp"
            android:text="Amenidades Ejemplo"
            android:layout_marginTop="15dp"
            android:background="@color/dark_blue"
            app:layout_constraintEnd_toEndOf="@id/linearLayout1"
            app:layout_constraintStart_toStartOf="@id/linearLayout1"
            app:layout_constraintTop_toBottomOf="@+id/amenidades"
            />

        <TextView
            android:id="@+id/fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fechas:"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/amenidades"
            app:layout_constraintTop_toBottomOf="@id/textoamenidades"/>

        <EditText
            android:id="@+id/entrada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Entrada"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/white"
            android:inputType="date"
            android:padding="9dp"
            app:layout_constraintStart_toEndOf="@id/amenidades"
            app:layout_constraintTop_toTopOf="@id/fecha"
            app:layout_constraintBottom_toBottomOf="@id/fecha"
            android:layout_marginStart="20dp"
            />
        <EditText
            android:id="@+id/salida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Salida"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:inputType="date"
            android:padding="9dp"
            android:textColorHint="@color/white"
            app:layout_constraintStart_toEndOf="@id/entrada"
            app:layout_constraintTop_toTopOf="@id/entrada"
            app:layout_constraintBottom_toBottomOf="@id/entrada"
            android:layout_marginStart="5dp"/>

        <TextView
            android:layout_margin="15dp"
            android:id="@+id/minimo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minimo una noche*"
            android:textColor="@color/LightGray"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="@id/camara"
            app:layout_constraintStart_toStartOf="@id/camara"
            app:layout_constraintTop_toBottomOf="@+id/fecha"
            android:paddingBottom="10dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alquilar"
            android:textSize="16sp"
            android:backgroundTint="@color/dark_blue"
            app:layout_constraintStart_toStartOf="@id/toleft"
            app:layout_constraintTop_toBottomOf="@+id/minimo"

            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UbicaciÃ³n"
            android:textSize="16sp"
            android:backgroundTint="@color/dark_blue"
            app:layout_constraintEnd_toEndOf="@id/toright"
            app:layout_constraintTop_toBottomOf="@+id/minimo"

            />


    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>